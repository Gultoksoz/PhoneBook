@model Phonebook.Models.Record
@{
    ViewBag.Title = "Create";
}

<h2>Create a new contact</h2>

<div class="row">
    <div class="col-md-6">

        @using (Html.BeginForm("Create", "Phonebook", FormMethod.Post))
        {
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            <br />

            @Html.LabelFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "text-danger" })
            <br />

            @Html.LabelFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" }) <br />

            <input type="submit" value="create" class="btn btn-success" /> <br />
        }

    </div>
</div>