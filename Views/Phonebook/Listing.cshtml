@model IEnumerable<Phonebook.Models.Record>
@{
    ViewBag.Title = "Listing";
}


<div class="container">
    <h3>Contact List</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.LastName)</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Name) </td>
                    <td> @Html.DisplayFor(modelItem => item.LastName) </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Phone }, new { @class = "btn btn-danger" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Phone }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<br /> <br />

<div class="container">
    <div class="col-sm-4">
        @Html.ActionLink("Create a new contact", "Create", null, new { @class = "btn btn-default" })
    </div>

</div>




